{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      "**/*.proto",
      "**/*.mjml",
      {
        "include": "../public",
        "outDir": "./dist/public"
      }
    ],
    "watchAssets": true
  }
}
